{
  "extends": "next/core-web-vitals",
  "rules": {
    "linebreak-style": [
        "error",
        "unix"
    ],
    "space-before-blocks": "error",
    "brace-style": "error",
    "no-multi-spaces": "error",
    "key-spacing": [
        "error",
        {
            "beforeColon": false,
            "afterColon": true
        }
    ],
    "object-curly-spacing": [
        "error",
        "always"
    ],
    "camelcase": "error",
    "prefer-const": "error",
    "eqeqeq": [
        "error",
        "smart"
    ],
    "prefer-template": "error",
    "no-console": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }]
  }
}
